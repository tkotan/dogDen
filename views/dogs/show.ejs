<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/dogs">The Roster</a>
          </li>
        </ul>
      </nav>
      <h1><%=onedog.name%>'s Page</h1>
    </header>
    <main>
      <section>
        <img src="<%=onedog.picture%>" alt="<%=onedog.name%>'s photo goes here">
        <h2>Stats</h2>
        <p>Name: <%=onedog.name%></p>
        <p>Gender: <%=onedog.gender%></p>
        <p>Breed: <%=onedog.breed%></p>
        <p><%=onedog.name%>'s favorite activities: <%=onedog.favoriteactivities%></p>
      </section>
      <section>

        <%# edit button%>
        <form action="/dogs/<%=onedog.id%>/edit">
          <input type="submit" value="Edit <%=onedog.name%>'s Profile">
        </form>

        <%# message button%>

        <form action="/messages/new">
          <input type="submit" value="Leave a message for <%=onedog.name%>">
        </form>
        <%# delete button%>

        <form action="/dogs/<%=onedog.id%>?_method=DELETE" method="POST">
        <input type="submit" value="Delete <%=onedog.name%>'s Profile">
        </form>
      </section>
    </main>
  </body>
</html>
